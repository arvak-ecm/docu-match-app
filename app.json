{
  "expo": {
    "name": "docu-match-app",
    "slug": "docu-match-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cl.documatch",
			"infoPlist": {
        "UIViewControllerBasedStatusBarAppearance":"YES"
      }

    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
			"UIViewControllerBasedStatusBarAppearance": "YES",
      "package": "com.cl.documatch"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "com.cl.documatch",
          "microphonePermission": "com.cl.documatch",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
